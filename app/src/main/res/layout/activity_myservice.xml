<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的服务"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="10sp"
        android:textColor="#7e7c7c"/>
    <TableLayout
        android:id="@+id/My_settings"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">
        <TableRow
            android:id="@+id/personInfo"
            android:background="@drawable/login_box">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_update"
                android:text="检查更新"
                android:textColor="#000"
                android:gravity="center"
                android:layout_marginLeft="40dp"
                android:textSize="@dimen/setting_text"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:src="@drawable/icon_arrow"
                />
        </TableRow>
        <TableRow
            android:id="@+id/myDevice"
            android:background="@drawable/login_box">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_bug_report"
                android:text="Bug反馈"
                android:textColor="#000"
                android:gravity="center"
                android:layout_marginLeft="40dp"
                android:textSize="@dimen/setting_text"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:src="@drawable/icon_arrow"
                />
        </TableRow>
        <TableRow
            android:id="@+id/myService"
            android:background="@drawable/login_box">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_coffee"
                android:text="我的服务"
                android:textColor="#000"
                android:gravity="center"
                android:layout_marginLeft="40dp"
                android:textSize="@dimen/setting_text"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:src="@drawable/icon_arrow"
                />
        </TableRow>
    </TableLayout>
</RelativeLayout>
