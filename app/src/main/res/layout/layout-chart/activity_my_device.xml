<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="20dp">
    <TextView
        android:id="@+id/my_band_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的手环"
        android:textSize="12sp"
        />
    <TableLayout
        android:id="@+id/serial_number"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/my_band_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="序列号"
                android:layout_marginLeft="20dp"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手环状态"
                android:gravity="center"
                android:layout_marginRight="120dp"
                android:textSize="15sp"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="7079d2e6c4d4d7d025f1d47df7f9294b"
                android:layout_marginLeft="20dp"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="激活"
                android:textSize="15sp"
                />
        </TableRow>
    </TableLayout>
    <TextView
        android:id="@+id/band_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="手环设置"
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        android:layout_below="@+id/serial_number"/>
    <TableLayout
        android:layout_below="@+id/band_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">
    <TableRow
        android:background="@drawable/login_box">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定手环"
            android:drawableLeft="@drawable/icon_bind_band"
            android:textColor="#000"
            android:gravity="center"
            android:layout_marginLeft="40dp"
            android:textSize="@dimen/setting_text"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:src="@drawable/icon_arrow"
            />
    </TableRow>
        <TableRow
            android:background="@drawable/login_box">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="解绑手环"
                android:drawableLeft="@drawable/icon_unbind_band"
                android:textColor="#000"
                android:gravity="center"
                android:layout_marginLeft="40dp"
                android:textSize="@dimen/setting_text"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:src="@drawable/icon_arrow"
                />
        </TableRow>
        <TableRow
            android:background="@drawable/login_box">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择手环"
                android:drawableLeft="@drawable/icon_choose_band"
                android:textColor="#000"
                android:gravity="center"
                android:layout_marginLeft="40dp"
                android:textSize="@dimen/setting_text"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:src="@drawable/icon_arrow"
                />
        </TableRow>
    </TableLayout>


</RelativeLayout>
</LinearLayout>
